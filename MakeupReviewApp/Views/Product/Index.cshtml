@model List<Product>

<h2>Makeup Products</h2>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4">
            <div class="card">
                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.Brand - $@product.Price</p>
                    <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-primary">View Details</a>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Create", "Review", new { productId = product.Id })" class="btn btn-success">Write a Review</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Login", "Account")" class="btn btn-warning">Login to Review</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
